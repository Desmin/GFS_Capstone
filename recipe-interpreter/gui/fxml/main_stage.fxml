<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.input.KeyCodeCombination?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="600.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.controllers.MainStageController">
    <children>
        <MenuBar VBox.vgrow="NEVER">
            <menus>
                <Menu mnemonicParsing="false" text="File">
                    <items>
                        <MenuItem fx:id="uploadImageMenuItem" mnemonicParsing="false" onAction="#promptWithImageSelector" text="Upload Image">
                            <accelerator>
                                <KeyCodeCombination alt="UP" code="U" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                            </accelerator>
                        </MenuItem>
                  <MenuItem fx:id="performOCRMenuItem" disable="true" mnemonicParsing="false" onAction="#performOCR" text="Extract Text">
                     <accelerator>
                        <KeyCodeCombination alt="UP" code="E" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                     </accelerator>
                  </MenuItem>
                        <MenuItem fx:id="interpretImageMenuItem" mnemonicParsing="false" onAction="#interpretRecipe" text="Interpret Image">
                            <accelerator>
                                <KeyCodeCombination alt="UP" code="I" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                            </accelerator>
                        </MenuItem>
                        <SeparatorMenuItem mnemonicParsing="false" />
                        <MenuItem fx:id="changeOCROptionsMenuItem" mnemonicParsing="false" onAction="#showOptionsStage" text="OCR Options...">
                            <accelerator>
                                <KeyCodeCombination alt="UP" code="O" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                            </accelerator>
                        </MenuItem>
                        <SeparatorMenuItem mnemonicParsing="false" />
                        <MenuItem fx:id="quitMenuItem" mnemonicParsing="false" onAction="#exitApplication" text="Quit">
                            <accelerator>
                                <KeyCodeCombination alt="UP" code="Q" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                            </accelerator>
                        </MenuItem>
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Help">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#showUsageDialog" text="Usage" />
                        <MenuItem mnemonicParsing="false" onAction="#showAboutDialog" text="About" />
                    </items>
                </Menu>
            </menus>
        </MenuBar>
        <AnchorPane maxHeight="-1.0" maxWidth="-1.0" prefHeight="422.0" prefWidth="640.0" VBox.vgrow="ALWAYS">
            <children>
                <TabPane fx:id="tabPane" prefHeight="575.0" prefWidth="600.0" tabClosingPolicy="UNAVAILABLE">
                    <tabs>
                        <Tab closable="false" text="Image">
                            <content>
                                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                                    <children>
                              <ScrollPane layoutX="9.0" layoutY="14.0" prefHeight="480.0" prefWidth="583.0">
                                 <content>
                                              <ImageView fx:id="imageView" fitHeight="1016.0" fitWidth="1010.0" pickOnBounds="true" preserveRatio="true" />
                                 </content>
                              </ScrollPane>
                                        <Button fx:id="uploadImageButton" layoutX="190.0" layoutY="500.0" mnemonicParsing="false" onAction="#promptWithImageSelector" prefHeight="32.0" prefWidth="100.0" text="Select Image" />
                              <Button fx:id="performOCRButton" disable="true" layoutX="310.0" layoutY="500.0" mnemonicParsing="false" onAction="#performOCR" prefHeight="32.0" prefWidth="100.0" text="Extract Text" />
                                    </children>
                                </AnchorPane>
                            </content>
                        </Tab>
                        <Tab closable="false" text="Text">
                            <content>
                                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                                    <children>
                                        <TextArea fx:id="recipeTextArea" layoutX="15.0" layoutY="8.0" prefHeight="490.0" prefWidth="570.0" />
                                        <Button fx:id="interpretTextButton" layoutX="250.0" layoutY="504.0" mnemonicParsing="false" onAction="#interpretRecipe" prefHeight="32.0" prefWidth="100.0" text="Interpret Text" />
                                    </children>
                                </AnchorPane>
                            </content>
                        </Tab>
                    </tabs>
                </TabPane>
            </children>
        </AnchorPane>
    </children>
</VBox>
